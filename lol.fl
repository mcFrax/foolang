    testIfs()
    testWhile()

fun pow(-> Int n, Int p):
    if p < 1:
        n <- 1
    elif p > 1:
        -> n * pow(n, p-1)

fun factorial(Int n) -> Int:
    if n < 2:
        return 1
    else:
        return n * factorial(n-1)

