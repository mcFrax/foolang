fun factorial2(Int n) -> Int:
    result <- 1
    while n > 1:
        -> result * n
        -> n - 1
    return result

proc testIfs():
    testIfs'(0)
    testIfs'(1)
    testIfs'(2)
    testIfs'(3)

proc testIfs'(Int b):
    if b =< 0:
        ! "branch 0"
    elif b == 1:
        ! "branch 1"
    elif b == 2:
        ! "branch 2"
    else:
        ! "branch 3"
    ! "after if"

proc testWhile():
    ! "testing while"
    i <- 0
    while True:
        -> i + 1
        if i % 2 == 1:
            continue
        if i > 6:
            while True:
                break
        if i > 10:
            break
        ! i

